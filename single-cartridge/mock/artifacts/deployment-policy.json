{
	"applicationId":"single-cartridge-app",
    "applicationPolicy": {
        "networkPartition": [
            {
                "id": "network-p1",
                "activeByDefault": "true",
                "partitions": [
                    {
                        "id": "p1",
                        "provider": "mock",
                        "property": [
                            {
                                "name": "region",
                                "value": "default"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "childPolicies": [
        {
            "alias": "tomcat",
            "networkPartition": [
                {
                    "id": "network-p1",
                    "partitionAlgo": "one-after-another",
                    "partitions": [
                        {
                            "id": "p1",
                            "max": 5
                        }
                    ]
                }
            ]
        }
    ]
}

